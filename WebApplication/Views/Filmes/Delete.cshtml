@model WebApplication.Models.Filmes

@{
    ViewBag.Title = "Apagar";
}

<h2>Apagar</h2>

<div>
    <h4>Filmes</h4>
    <hr />
    <h3>Deseja apagar o seguinte filme?</h3>
    <p class="error">@ViewBag.ErrorMessage</p>
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Duracao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duracao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnoLancamento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnoLancamento)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar à lista", "Index")
        </div>
    }
</div>
