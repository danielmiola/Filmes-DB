@model WebApplication.Models.Papeis

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Personagens</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.FilmeID, "FilmeID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FilmeID", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FilmeID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AtorID, "AtorID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AtorID", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AtorID)
            </div>
        </div>

        @Html.HiddenFor(model => model.FilmeID)
        @Html.HiddenFor(model => model.AtorID)

        <div class="form-group">
            @Html.LabelFor(model => model.NomePersonagem, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NomePersonagem, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NomePersonagem)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar à lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
